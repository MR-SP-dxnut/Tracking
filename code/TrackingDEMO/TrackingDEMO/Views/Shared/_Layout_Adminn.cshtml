<!DOCTYPE html>
@{
    Layout = "_Layout_Admin";

}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@100;200&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />

</head>
    <div class="sidenav">
        @{
            var action = @ViewBag.Actionbar;

            <a asp-controller="Admin" asp-action="Tracking" id="Tracking"  onmouseenter="big(this)" onmouseleave="normal(this)" >
            @{
                if (action.Equals("Tracking")){
                    <span class="text-dark border-dark border-bottom"> Tracking </span> 
                    
                }else
                {
                    <span> Tracking </span> 
                }
            }
            </a>

            <a asp-controller="Admin" asp-action="MyQRcode" id="MyQRcode"  onmouseenter="big(this)" onmouseleave="normal(this)" >
            @{
                if (action.Equals("MyQRcode")){
                    <span class="text-dark border-dark border-bottom"> คิวอาร์โค๊ดของฉัน </span> 
                }else
                {
                    <span> คิวอาร์โค๊ดของฉัน </span> 
                }
            }
            </a>

            
            <a asp-controller="Admin" asp-action="HistoryTracking" id="HistoryTracking"  onmouseenter="big(this)" onmouseleave="normal(this)" >
            @{
                if (action.Equals("HistoryTracking")){
                    <span class="text-dark border-dark border-bottom"> ประวัติการ Tracking </span> 
                }else
                {
                    <span> ประวัติการ Tracking </span> 
                }
            }
            </a>
        }

    </div>
    <div>
        @RenderBody()
    </div>
    <script>
        function big(x) {
            x.style.fontSize = "20px";
        }
        function normal(x) {
            x.style.fontSize = "16px";
        }
    </script>

</html>
